@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}


<div class="row justify-content-center">
<h1>@ViewData["Title"]</h1>
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Новый аккаунт УсыЛапыХвост.</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.Surname">Фамилия - Surname*</label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.Name">Имя - Name*</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Patronymic" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.Patronymic">Отчество</label>
                <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.PhoneNumber">Номер телефона - Phone number</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Эл.почта - Email*</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.Address">Адрес - Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Index" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.Index">Индекс - Post-code</label>
                <span asp-validation-for="Input.Index" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.City">Город - City*</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Country" class="form-control" aria-required="true" placeholder="text"/>
                <label asp-for="Input.Country">Страна - Country</label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="пароль" />
                <label asp-for="Input.Password">Пароль*</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="пароль" />
                <label asp-for="Input.ConfirmPassword">Подтверждение пароля*</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
@*            <div class="form-floating mb-3">
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option selected disabled>Роль</option>
                </select>
            </div>*@
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
