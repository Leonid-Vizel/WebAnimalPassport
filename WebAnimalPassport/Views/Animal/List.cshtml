@using WebAnimalPassport.Models.Enums;
@model List<Animal>
@{
    ViewData["Title"] = "Ваши питомцы";
}
<h1 class="text-cenrer">@ViewData["Title"]</h1>

<div class="row">
    @foreach (Animal animal in Model)
    {
        <div class="col-12 col-sm-6 col-md-3 col-lg-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">@animal.Name</h3>
                </div>
                <div class="card-body">
                    <a class="btn p-0 border-0 rounded btn-outline-success" asp-controller="Animal" asp-action="Index" asp-route-id="@animal.Id">
                        @if (animal.PhotoPath == null)
                        {
                            @switch (animal.Type)
                            {
                                case AnimalType.Cat:
                                    <img class="rounded w-100 h-100" src="~/src/Stocks/cat.svg">
                                    break;
                                case AnimalType.Dog:
                                    <img class="rounded w-100 h-100" src="~/src/Stocks/dog.svg">
                                    break;
                            }
                        }
                    </a>
                </div>
            </div>
        </div>
    }
    <div class="col-12 col-sm-6 col-md-3 col-lg-2">
        <a class="btn btn-outline-success h-100 w-100 d-flex align-items-center justify-content-center">Добавить питомца</a>
    </div>
</div>