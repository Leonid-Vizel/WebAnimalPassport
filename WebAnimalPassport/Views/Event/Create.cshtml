@model EventCreateModel
@{
    ViewData["Title"] = "Создание нового мероприятия";
}
<h1 class="text-center">@ViewData["Title"]</h1>
<form method="post" enctype='multipart/form-data'>
    <partial name="_EventModifyModel" />
    <div class="row">
        <div class="col-6">
            <a role="button" class="btn btn-dark w-100" asp-controller="Event" asp-action="List">Назад</a>
        </div>
        <div class="col-6">
            <button type="submit" class="btn btn-success w-100">Создать</button>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}