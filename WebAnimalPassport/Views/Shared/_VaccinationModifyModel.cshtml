@model VaccinationCreateModel

<div class="row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="File"></label>
            </div>
            <div class="col-8 my-1">
                <input type="file" name="File" id="uploadBox" multiple class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="Type"></label>
            </div>
            <div class="col-8 my-1">
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="Series"></label>
            </div>
            <div class="col-8 my-1">
                <input asp-for="Series" class="form-control" />
                <span asp-validation-for="Series" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="DoctorName"></label>
            </div>
            <div class="col-8 my-1">
                <input asp-for="DoctorName" class="form-control" />
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="StartDate"></label>
            </div>
            <div class="col-8 my-1">
                @if (Model.StartDate == default)
                {
                    <input asp-for="StartDate" type="date" value="" class="form-control" />
                }
                else
                {
                    <input asp-for="StartDate" type="date" class="form-control" />
                }
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="EndDate"></label>
            </div>
            <div class="col-8 my-1">
                @if (Model.EndDate == default)
                {
                    <input asp-for="EndDate" type="date" value="" class="form-control" />
                }
                else
                {
                    <input asp-for="EndDate" type="date" class="form-control" />
                }
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="form-group row offset-4">
            <div class="col-6 pt-2">
                <button type="submit" class="btn btn-dark w-100 pt-1">
                    <i class="fa-solid fa-floppy-disk" style="color: #ffffff;"></i>
                    Save
                </button>
            </div>
            <div class="col-6 pt-2">
                <a asp-controller="Animal" asp-action="Index" asp-route-id="@Model.AnimalId" class="btn btn-dark w-100 pt-1">
                    <i class="fa-solid fa-arrow-left" style="color: #ffffff;"></i>
                    Back
                </a>
            </div>
        </div>
    </div>
</div>