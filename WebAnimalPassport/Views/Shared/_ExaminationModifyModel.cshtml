@model ExaminationCreateModel
<div class="row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="File"></label>
            </div>
            <div class="col-8 my-1">
                <input type="file" name="File" id="uploadBox" multiple class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="Date"></label>
            </div>
            <div class="col-8 my-1">
                @if (Model.Date == default)
                {
                    <input asp-for="Date" type="date" value="" class="form-control" />
                }
                else
                {
                    <input asp-for="Date" type="date" class="form-control" />
                }
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="Declaration"></label>
            </div>
            <div class="col-8 my-1">
                <select asp-for="Declaration" class="form-select">
                    <option>Животное здорово и выдержит перевозку до места назначения. / The animal is in good health and able withstand carriage to its destination</option>
                    <option>Настоящим подтверждаю, что животное клинически здорово. / Hereby I confirm taht the animal is clinically healthy</option>
                </select>
                <span asp-validation-for="Declaration" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4 my-1">
                <label asp-for="DoctorName"></label>
            </div>
            <div class="col-8 my-1">
                <input asp-for="DoctorName" class="form-control" />
                <span asp-validation-for="DoctorName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="form-group row offset-4">
            <div class="col-6 pt-2">
                <button type="submit" class="btn btn-dark w-100 pt-1">
                    <i class="fa-solid fa-floppy-disk" style="color: #ffffff;"></i>
                    Save
                </button>
            </div>
            <div class="col-6 pt-2">
                <a asp-action="Index" class="btn btn-dark w-100 pt-1">
                    <i class="fa-solid fa-arrow-left" style="color: #ffffff;"></i>
                    Back
                </a>
            </div>
        </div>
    </div>
</div>